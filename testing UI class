import java.util.Scanner;

class UI 
{//UI class start
	
	private static Scanner keyIn = new Scanner(System.in);
	
	public static double betAmountPrompt()
	{
		double betAmo;
		
		//prompting for, getting, and parsing user input
		System.out.print("Please enter your bet.\n>>> ");
		betAmo = Double.parseDouble(keyIn.nextLine());
		return betAmo;
	}
	
}//UI class end
